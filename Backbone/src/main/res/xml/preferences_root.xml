<PreferenceScreen
        xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Access mode -->
    <PreferenceCategory
            android:key="root_settings"
            android:title="@string/pref_access_mode">

        <!-- Access Mode -->
        <ListPreference
                android:key="cm_filemanager_access_mode"
                android:entries="@array/access_mode_labels"
                android:entryValues="@array/access_mode_values"
                android:defaultValue="0"
                android:persistent="true"/>

    </PreferenceCategory>

    <!-- Command listings -->
    <PreferenceCategory
        android:key="installed_commands_category"
        android:title="@string/pref_installed_commands_category">

        <!-- Listing -->
        <me.toolify.backbone.ui.preferences.CommandPreference
            android:key="cm_filemanager_installed_commands"
            android:title="@string/ash_text"
            android:persistent="false"
            android:defaultValue="@color/ash_text_color"/>

    </PreferenceCategory>

    <PreferenceCategory
        android:key="missing_commands_category"
        android:title="@string/pref_missing_commands_category">

        <!-- Text -->
        <me.toolify.backbone.ui.preferences.CommandPreference
            android:key="cm_filemanager_missing_commands"
            android:title="@string/ash_text"
            android:persistent="false"
            android:defaultValue="@color/ash_text_color"/>

    </PreferenceCategory>
</PreferenceScreen>
