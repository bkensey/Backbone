<resources xmlns:xliff="urn:oasis:names:tc:xliff:document:1.2">
    <!-- Command definition -->
    <declare-styleable name="Command">
        <!-- Unique identifier of the commmand -->
        <attr name="commandId" format="string" />
        <!-- The full qualified path to the executable -->
        <attr name="commandPath" format="string" />
        <!-- The arguments to be passed to the executable -->
        <attr name="commandArgs" format="string" />
    </declare-styleable>

    <!-- Bookmark definition -->
    <declare-styleable name="Bookmark">
        <!-- The name of the bookmark -->
        <attr name="name" format="string" />
        <!-- The folder which the bookmark point to -->
        <attr name="directory" format="string" />
    </declare-styleable>

    <!-- Navigable definition -->
    <declare-styleable name="Navigable">
        <!-- The type of navigation -->
        <attr name="navigation" format="integer">
            <enum name="browsable" value="0" />
            <enum name="pickable" value="1" />
        </attr>
    </declare-styleable>

    <!-- Main application styleables -->
    <declare-styleable name="FileManager">
        <attr name="breadcrumbTitleTextColor" format="color"/>
        <attr name="breadcrumbSubtitleTextColor" format="color"/>

        <attr name="actionIconFolderProperties" format="reference"/>
        <attr name="actionIconRefresh" format="reference"/>
        <attr name="actionIconNewDirectory" format="reference"/>
        <attr name="actionIconNewFile" format="reference"/>
        <attr name="actionIconPasteSelection" format="reference"/>
        <attr name="actionIconMoveSelection" format="reference"/>
        <attr name="actionIconDeleteSelection" format="reference"/>
        <attr name="actionIconCompressSelection" format="reference"/>
        <attr name="actionIconCreateLinkGlobal" format="reference"/>
        <attr name="actionIconSendSelection" format="reference"/>
        <attr name="actionIconAddFolderBookmark" format="reference"/>
        <attr name="actionIconAddFolderShortcut" format="reference"/>
        <attr name="actionIconProperties" format="reference"/>
        <attr name="actionIconOpen" format="reference"/>
        <attr name="actionIconOpenWith" format="reference"/>
        <attr name="actionIconDelete" format="reference"/>
        <attr name="actionIconRename" format="reference"/>
        <attr name="actionIconCompress" format="reference"/>
        <attr name="actionIconExtract" format="reference"/>
        <attr name="actionIconCreateCopy" format="reference"/>
        <attr name="actionIconCreateLink" format="reference"/>
        <attr name="actionIconExecute" format="reference"/>
        <attr name="actionIconSend" format="reference"/>
        <attr name="actionIconAddBookmark" format="reference"/>
        <attr name="actionIconAddShortcut" format="reference"/>
        <attr name="actionIconOpenParentFolder" format="reference"/>
        <attr name="actionIconSelectAll" format="reference"/>
        <attr name="actionIconSearchSettings" format="reference"/>
        <attr name="actionIconSave" format="reference"/>
        <attr name="actionIconChecksum" format="reference"/>
        <attr name="actionIconSortMode" format="reference"/>
        <attr name="actionIconLayoutMode" format="reference"/>
        <attr name="actionIconViewOptions" format="reference"/>
        <attr name="actionIconLockOpen" format="reference"/>
        <attr name="actionIconLockClosed" format="reference"/>
        <attr name="actionIconWarning" format="reference"/>

        <attr name="indicatorIconFolder" format="reference"/>
        <attr name="indicatorIconFile" format="reference"/>

    </declare-styleable>

    <!-- Preference styleables -->
    <declare-styleable name="FileManagerPrefs">

        <attr name="preferenceIconGeneral" format="reference"/>
        <attr name="preferenceIconRoot" format="reference"/>
        <attr name="preferenceIconSearch" format="reference"/>
        <attr name="preferenceIconEditor" format="reference"/>
        <attr name="preferenceIconAbout" format="reference"/>
        <attr name="preferenceIconDashclock" format="reference"/>

    </declare-styleable>

    <declare-styleable name="PagerSlidingTabStrip">

        <attr name="indicatorColor" format="color" />
        <attr name="underlineColor" format="color" />
        <attr name="dividerColor" format="color" />
        <attr name="indicatorHeight" format="dimension" />
        <attr name="underlineHeight" format="dimension" />
        <attr name="dividerPadding" format="dimension" />
        <attr name="tabPaddingLeftRight" format="dimension" />
        <attr name="scrollOffset" format="dimension" />
        <attr name="tabBackground" format="reference" />
        <attr name="shouldExpand" format="boolean" />
        <attr name="textAllCaps" format="boolean" />

    </declare-styleable>

</resources>
